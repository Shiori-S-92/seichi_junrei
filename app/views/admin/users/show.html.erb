<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3><b>ユーザー情報詳細</b></h3>

      <table class="table table-bordered">
            <!--<thead></thead>-->
            <tbody>
              <tr>
                <td>ユーザーID</td>
                <td><%= @user.id %></td>
              </tr>
              <tr>
                <td>ユーザー表示名</td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td>ユーザーステータス</td>
                <td>
                	<% if @user.is_active? %>
                		<span class="text-active">有効</span>
                	<% else %>
                		<span class="text-invalid">退会済み</span>
                	<% end %>
                </td>
              </tr>
            </tbody>
          </table>
      <!--編集する（緑ボタン）-->
      <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %>
    </div>
  </div>

  <div class="row">
    <!--<div class="col-md-8 offset-md-1">-->
    <div class="col-md-12">
      <h3><b><%= @user.name %> さんの投稿一覧</b></h3>
    </div>
  </div>
  <div class="row">
      <%= render 'public/homes/timeline', posts: @posts %>
  </div>
</div>
