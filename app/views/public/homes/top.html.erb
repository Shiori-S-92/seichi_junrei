<div class="container">
  <div class="row">
    <div class="col-md-9">
        <h1>swell へようこそ！</h1>
    </div>
    <div class="col-md-2 offset-md-1">
      <div style="text-align:center">
        <% if user_signed_in? %>
          &nbsp<%= link_to '新規投稿', new_post_path, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <table class='jscroll-div'>
      <% @posts.each do |post| %>
        <%= link_to post_path(post.id) do %>
          <% @post_user = post.user %>
          <!--投稿画像-->
          <p>
            <% if post.images.any? %>
              <%= image_tag post.images[0], size: "200x200" %>
            <% end %>
          </p>
          <!--投稿日付-->
          <p><%= post.created_at %></p>
          <!--ユーザー名-->
          <p><%= @post_user.name %></p>
          <!--タイトル-->
          <p><%= post.title %></p>
        <% end %>
      <% end %>
      <%= paginate @posts %>
    </table>
  </div>
</div>