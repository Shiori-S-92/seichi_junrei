<div class="container">
  <div class="row">
    <h1>swell へようこそ！</h1>
    <div>
      <% if user_signed_in? %>
        &nbsp<%= link_to '新規投稿', new_post_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class='jscroll-div'>
      <% @posts.each do |post| %>
        <%= link_to post_path(post.id) do %>
          <% @post_user = post.user %>
          <!--投稿画像-->
          <!--<h5><%#= image_tag post.get_image(100,100) %></h5>-->
          <p><%= image_tag post.image, size: "200x200" %></p>
          <!--投稿日付-->
          <p><%= post.created_at %></p>
          <!--ユーザー名-->
          <p><%= @post_user.name %></p>
          <!--タイトル-->
          <p><%= post.title %></p>
        <% end %>
      <% end %>
      <%= paginate @posts %>
    </table>
  </div>
</div>