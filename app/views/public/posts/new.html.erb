<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>新規投稿</h1>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= form_with model: @post, url: '/posts', method: :post do |f| %>
          <%= render 'layouts/error_messages', resource: @post %>
          <!--<div class="field">-->
          <div class="form-group">
            <%= f.label :image, "画像", class: 'bmd-label-floating' %><br>
            <!-- ↓ 複数枚投稿できるように multiple: true 入れる-->
            <%= f.file_field :images, multiple: true, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :title, "タイトル" %><br>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :content, "内容" %><br>
            <%= f.text_area :content, size: "50x5" %>
          </div>

          <div class="field">
              <%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %><br>
              〒<%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "郵便番号", class: "jpostal_code" %>
          </div>
          <div class="field">
            <%= f.label :address, "住所" %><br>
            <%= f.text_field :address, autocomplete: "address", placeholder: "住所", class: "jpostal_address" %>
          </div>
          &nbsp
          <div class="field">
            <%= f.submit '投稿する', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

