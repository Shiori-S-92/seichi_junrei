<h1>新規投稿</h1>
<table>
  <%= form_with model: @post, local:true do |f| %>
  <tbody>
    <tr>
      <td><%= f.label :image, "画像" %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td><%= f.label :title, "タイトル" %></td>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <td><%= f.label :content, "内容" %></td>
      <td><%= f.text_area :content %></td>
    </tr>
    <tr>
      <td colspan="2" ><%= f.submit '投稿する', class: "btn btn-success" %></td>
    </tr>
  </tbody>
  <% end %>
</table>