<h1>新規投稿</h1>

<%= form_with model: @post, url: '/posts', method: :post do |f| %>
  <%= render 'layouts/error_messages', resource: @post %>
  <div class="field">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, "内容" %>
    <%= f.text_area :content %>
  </div>

  <div class="field">
      <%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %>
      〒<%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "郵便番号", class: "jpostal_code" %>
  </div>
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autocomplete: "address", placeholder: "住所", class: "jpostal_address" %>
  </div>
  <div class="field">
    <%= f.submit '投稿する', class: "btn btn-success" %>
  </div>
<% end %>
